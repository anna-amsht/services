<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-table-order-items" author="anna">
        <createTable tableName="order_items">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="order_items_order_id_orders_id" references="orders(id)"/>
            </column>
            <column name="item_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="order_items_item_id_items_id" references="items(id)"/>
            </column>
            <column name="quantity" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-indexes-table-order-items" author="anna">
        <createIndex tableName="order_items" indexName="idx_order_items_order_id">
            <column name="order_id"/>
        </createIndex>

        <createIndex tableName="order_items" indexName="idx_order_items_item_id">
            <column name="item_id"/>
        </createIndex>

        <createIndex tableName="order_items" indexName="idx_order_items_order_item">
            <column name="order_id"/>
            <column name="item_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
